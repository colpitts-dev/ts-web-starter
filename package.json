{
  "name": "ts-web-starter",
  "version": "1.0.0",
  "description": "TypeScript express boilerplate",
  "author": "acolpitts <adam@colpitts.dev>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore . --fix",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn prettier --check",
    "format:fix": "yarn prettier --write",
    "check-types": "tsc",
    "build": "babel src --extensions .ts,.tsx --out-dir dist",
    "build:watch": "yarn build --watch",
    "dev": "cross-env NODE_ENV=development nodemon ./src/app.ts",
    "start": "cross-env NODE_ENV=production node ./dist/app.js",
    "validate": "yarn lint && yarn format && yarn check-types && yarn build",
    "prepare": "husky install",
    "prestart": "yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
