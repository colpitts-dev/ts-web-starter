{
  "name": "ts-web-starter",
  "version": "1.0.0",
  "description": "TypeScript express boilerplate",
  "author": "acolpitts <adam@colpitts.dev>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore . --fix",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn prettier --check",
    "format:fix": "yarn prettier --write",
    "check-types": "tsc",
    "build": "babel src --extensions .ts,.tsx --out-dir dist",
    "build:watch": "yarn build --watch",
    "dev": "cross-env NODE_ENV=development nodemon -e ts,json,hbs ./src/app.ts",
    "start": "cross-env NODE_ENV=production node ./dist/app.js",
    "validate": "yarn lint && yarn format && yarn check-types && yarn test",
    "prepare": "husky install",
    "prestart": "yarn build",
    "prebuild": "yarn validate",
    "db:seed": "ts-node ./scripts/seed-db.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@faker-js/faker": "^7.6.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.4.0",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "mongodb-memory-server": "^8.11.4",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-handlebars": "^6.0.6",
    "mongoose": "^6.9.0"
  }
}
